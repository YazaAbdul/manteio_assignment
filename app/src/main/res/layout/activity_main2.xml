<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        >

        <include layout="@layout/header_"/>




    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:layout_margin="12dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Community"
                android:fontFamily="@font/poppins"
                android:backgroundTint="@color/blue"
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:textSize="16dp"
                android:text="Resident"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL_search1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="80"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >

            <EditText
                android:id="@+id/searchET"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:textSize="12dp"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:layout_marginStart="20dp"
                android:textColor="#717171"
                />


            <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/search"
                />





        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/filter_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/filter_bg"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            tools:ignore="InvalidId">




            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
               android:layout_centerInParent="true"

                android:background="@drawable/vector"
                />





        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_search2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100"
        android:visibility="gone"
        >

        <RelativeLayout
            android:id="@+id/search_short_Id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/filter_bg"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="20"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >




            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/white"

                android:background="@drawable/search"
                />





        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="40"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Months"
                android:textSize="12dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="20dp"
                android:textColor="#1B1B1B"
                android:fontFamily="@font/poppins"
                android:layout_centerVertical="true"
                />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/search"
                />





        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_bg"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="40"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="12dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="20dp"
                android:textColor="#1B1B1B"
                android:fontFamily="@font/poppins"
                android:layout_centerVertical="true"/>


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:background="@drawable/search"
                />





        </RelativeLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFEDED"
        android:layout_height="23dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#FF4C4C"
            android:text="Issue relates to the entire community or other community member"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>









    </RelativeLayout>




</LinearLayout>