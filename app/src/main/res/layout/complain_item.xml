<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:background="@drawable/complain_bg"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        >
        <!-- android:background="@color/bg_background"-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/RL1"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/profile_IV_ID"
                    android:layout_width="34dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/iconamoon_profile"
                    />

                <TextView
                    android:id="@+id/username_TV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viha Vinod"
                    android:textSize="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/profile_IV_ID"
                    />

                <TextView
                    android:id="@+id/block_TV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username_TV_ID"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/profile_IV_ID"
                    android:fontFamily="@font/poppins"
                    android:text="Block D-107"
                    android:textSize="9dp" />


                <TextView
                    android:id="@+id/time_TV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/block_TV_ID"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/profile_IV_ID"
                    android:fontFamily="@font/poppins"
                    android:text="2 days ago"
                    android:textSize="8dp" />

                <ImageView
                    android:id="@+id/delet_IV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/delet" />
                <ImageView
                    android:id="@+id/edit_IV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                  android:layout_toStartOf="@id/delet_IV_ID"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/edit" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@id/edit_IV_ID"
                    android:paddingBottom="10dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/share" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@id/RL2"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/RL1"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/complainname_TV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loud Noise"
                    android:textSize="20dp"
                    android:textColor="#07A4FC"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:id="@+id/complaindecription_TV_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/complainname_TV_ID"
                    android:layout_marginStart="5dp"
                    android:textColor="#4D4D4D"
                    android:fontFamily="@font/poppins"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..."
                    android:textSize="10dp" />







            </RelativeLayout>
            <RelativeLayout
                android:id="@id/RL3"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/RL2"
                android:layout_marginEnd="10dp"
                android:layout_height="50dp">

                    <LinearLayout
                        android:id="@+id/LL0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fram"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fram"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fram"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/fram"
                            />


                    </LinearLayout>
                <TextView
                    android:id="@+id/moreimg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_toEndOf="@id/LL0"
                    android:fontFamily="@font/poppins"
                    android:text="+2"
                    />













            </RelativeLayout>

            <RelativeLayout
                android:id="@id/RL4"
                android:layout_width="match_parent"

                android:layout_marginStart="10dp"
                android:layout_below="@id/RL3"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/viewId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/eye"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/viewnumberID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="34"
                    android:layout_toEndOf="@id/viewId"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#000000"

                    />

                <ImageView
                    android:id="@+id/commentId"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/comment"
                    android:gravity="center"
                    android:layout_toEndOf="@id/viewnumberID"
                    android:layout_marginStart="10dp"
                    />
                <TextView
                    android:id="@+id/numbercommentID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:layout_toEndOf="@id/commentId"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#000000"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="View all comments"
                    android:layout_toEndOf="@id/numbercommentID"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="#717171"

                    />














            </RelativeLayout>
            <RelativeLayout
                android:id="@id/RL5"
                android:layout_width="match_parent"

                android:layout_marginStart="10dp"
                android:layout_below="@id/RL4"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/username2_TV_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sisira Yash"
                    android:textSize="11dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="5dp"


                    />

                <TextView
                    android:id="@+id/userdecription_TV_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/username2_TV_ID"
                    android:layout_marginStart="5dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:alpha="0.7"
                    android:text="Lorem ipsum dolor sit amet, consectetur adip..."
                    android:fontFamily="@font/poppins"
                   android:textSize="11dp" />














            </RelativeLayout>





        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>